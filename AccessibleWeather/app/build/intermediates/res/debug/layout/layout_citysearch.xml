<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip">
    <ProgressBar android:id="@+id/locationLookupProgressBar"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:contentDescription="@string/searchingString"/>
    <TextView android:id="@+id/currentLocationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"/>
    <EditText android:id="@+id/citySearchEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentLocationText"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:textSize="20sp"
        android:inputType="text"
        android:imeOptions="actionGo"
        android:focusable="true"
        android:singleLine="true"
        android:hint="@string/citySearchString"/>
    <Button android:id="@+id/goButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/citySearchEdit"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:textStyle="bold"
        android:focusable="true"
        android:nextFocusDown="@+id/previousSearchesText"
        android:contentDescription="@string/goButtonString"
        android:text="@string/goButtonString"/>
    <TextView android:id="@+id/previousSearchesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:focusable="true"
        android:text="@string/previousSearchesString"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/goButton"
        android:layout_marginTop="8dip"/>
    <ListView android:id="@+id/previousCitiesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:layout_below="@id/previousSearchesText"/>
</RelativeLayout><!-- From: file:/Users/Kamenator/School/Cs/AccessibleWeather/WeatherApp/AccessibleWeather/app/src/main/res/layout/layout_citysearch.xml -->