<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingBottom="3dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp">

    <ProgressBar android:id="@+id/cityWeatherLoadingBar"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:contentDescription="@string/loadingLogoString"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <RelativeLayout android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip">
        <TextView android:id="@+id/cityLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:nextFocusDown="@+id/cityTimeText"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/cityTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:nextFocusUp="@id/cityLocationText"
            android:nextFocusDown="@+id/cityTempText"
            android:layout_below="@id/cityLocationText"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/cityTempText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityTimeText"
            android:focusable="true"
            android:nextFocusDown="@+id/cityPopText"
            android:nextFocusUp="@id/cityTimeText"
            android:layout_marginTop="10dip"
            android:textSize="20sp"/>
        <TextView android:id="@+id/cityPopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityTempText"
            android:focusable="true"
            android:nextFocusDown="@+id/cityHumidityText"
            android:nextFocusUp="@id/cityTempText"
            android:textSize="20sp"/>
        <TextView android:id="@+id/cityHumidityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityPopText"
            android:focusable="true"
            android:nextFocusDown="@+id/cityWindText"
            android:nextFocusUp="@id/cityPopText"
            android:textSize="20sp"/>
        <TextView android:id="@+id/cityWindText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityHumidityText"
            android:focusable="true"
            android:nextFocusDown="@+id/cityDailyList"
            android:nextFocusUp="@id/cityHumidityText"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View android:id="@+id/dividerItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A4C639"
        android:layout_below="@id/detailsLayout"/>

    <ListView android:id="@+id/cityDailyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:layout_below="@id/dividerItem"/>
</RelativeLayout>