<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD">
    <RelativeLayout android:id="@+id/helpScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/helpSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="#FAFAFA">
            <TextView android:id="@+id/helpSectionHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#212121"
                android:text="@string/helpString"/>

            <RelativeLayout android:id="@+id/helpSection01Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/helpSectionHeaderText">
                <RelativeLayout android:id="@+id/helpSection01HeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:contentDescription="@string/helpNavigationTitle"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <ImageView android:id="@+id/helpSection01HeaderIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/clickToOpenString"
                        android:focusable="false"
                        android:src="@drawable/document_icon"/>
                    <TextView android:id="@+id/helpSection01Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:focusable="false"
                        android:layout_toRightOf="@id/helpSection01HeaderIcon"
                        android:text="@string/helpNavigationTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView android:id="@+id/helpSection01BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/helpSection01HeaderLayout"
                    android:text="@string/helpNavigationDetails"
                    android:textColor="#000000"/>
                <View android:id="@+id/dividerHelp01"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#616161"
                    android:focusable="false"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/helpSection02Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/helpSection01Layout">
                <RelativeLayout android:id="@+id/helpSection02HeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:contentDescription="@string/helpMenuTitle"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <ImageView android:id="@+id/helpSection02HeaderIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/clickToOpenString"
                        android:focusable="false"
                        android:src="@drawable/document_icon"/>
                    <TextView android:id="@+id/helpSection02Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:focusable="false"
                        android:layout_toRightOf="@id/helpSection02HeaderIcon"
                        android:text="@string/helpMenuTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView android:id="@+id/helpSection02BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/helpSection02HeaderLayout"
                    android:text="@string/helpMenuDetails"
                    android:textColor="#000000"/>
                <View android:id="@+id/dividerHelp02"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#616161"
                    android:focusable="false"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/helpSection03Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/helpSection02Layout">
                <RelativeLayout android:id="@+id/helpSection03HeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:contentDescription="@string/helpLookupTitle"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <ImageView android:id="@+id/helpSection03HeaderIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/clickToOpenString"
                        android:focusable="false"
                        android:src="@drawable/document_icon"/>
                    <TextView android:id="@+id/helpSection03Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:focusable="false"
                        android:layout_toRightOf="@id/helpSection03HeaderIcon"
                        android:text="@string/helpLookupTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView android:id="@+id/helpSection03BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/helpSection03HeaderLayout"
                    android:text="@string/helpLookupDetails"
                    android:textColor="#000000"/>
                <View android:id="@+id/dividerHelp03"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#616161"
                    android:focusable="false"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/helpSection04Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/helpSection03Layout">
                <RelativeLayout android:id="@+id/helpSection04HeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:contentDescription="@string/helpNotificationTitle"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <ImageView android:id="@+id/helpSection04HeaderIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/clickToOpenString"
                        android:focusable="false"
                        android:src="@drawable/document_icon"/>
                    <TextView android:id="@+id/helpSection04Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:focusable="false"
                        android:layout_toRightOf="@id/helpSection04HeaderIcon"
                        android:text="@string/helpNotificationTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView android:id="@+id/helpSection04BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/helpSection04HeaderLayout"
                    android:text="@string/helpNotificationDetails"
                    android:textColor="#000000"/>
                <View android:id="@+id/dividerHelp04"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#616161"
                    android:focusable="false"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/aboutSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="#FAFAFA"
            android:focusable="true"
            android:contentDescription="@string/aboutString"
            android:layout_below="@id/helpSection">
            <TextView android:id="@+id/aboutSectionHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#212121"
                android:focusable="false"
                android:text="@string/aboutString"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/feedbackSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="#FAFAFA"
            android:focusable="true"
            android:contentDescription="@string/feedbackString"
            android:layout_below="@id/aboutSection">
            <TextView android:id="@+id/feedbackSectionHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#212121"
                android:focusable="false"
                android:text="@string/feedbackString"/>
        </RelativeLayout>
    </RelativeLayout>
