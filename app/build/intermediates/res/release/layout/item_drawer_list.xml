<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">
        <ImageView android:id="@+id/itemIcon"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:focusable="false"/>
        <TextView android:id="@+id/itemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@id/itemIcon"
            android:layout_toEndOf="@id/itemIcon"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>
    </RelativeLayout>
    <View android:id="@+id/trivial_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#555555"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout><!-- From: file:/C:/Users/JEHOSHAPHAKSHAY/AndroidstudioProjects/AccessibleWeather/app/src/main/res/layout/item_drawer_list.xml -->