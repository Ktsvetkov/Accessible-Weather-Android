<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hourlyRowLayout"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip">
    <TextView android:id="@+id/rowTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:focusable="false"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/rowConditionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/rowTitleText"
        android:focusable="false"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/rowTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/rowConditionsText"
        android:focusable="false"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/rowPopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:focusable="false"
        android:layout_below="@id/rowTempText"
        style="@style/WeatherInfoOverlayText"/>
    <ImageView android:id="@+id/rowIconImage"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:focusable="false" />
</RelativeLayout><!-- From: file:/Users/Kamenator/School/Cs/AccessibleWeather/WeatherApp/AccessibleWeather/app/src/main/res/layout/rowlayout_hours.xml -->