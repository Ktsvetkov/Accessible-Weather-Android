<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dailyRowLayout"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip">
    <TextView android:id="@+id/dailyRowTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:focusable="false"
        android:text="Saturday Night"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/dailyRowConditionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/dailyRowTitleText"
        android:focusable="false"
        android:text="Clear"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/dailyRowHighsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/dailyRowConditionsText"
        android:focusable="false"
        android:text="Highs: 14"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/dailyRowLowsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:focusable="false"
        android:layout_below="@id/dailyRowHighsText"
        android:text="Lows: 4"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/dailyRowPopText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:focusable="false"
        android:layout_below="@id/dailyRowLowsText"
        android:text="Chance of rain: 0%"
        style="@style/WeatherInfoOverlayText"/>
    <TextView android:id="@+id/dailyRowSnowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:focusable="false"
        android:layout_below="@id/dailyRowPopText"
        android:text="Snow: 0 m"
        style="@style/WeatherInfoOverlayText"/>
    <ImageView android:id="@+id/dailyRowIconImage"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:focusable="false"/>
</RelativeLayout>